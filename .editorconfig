# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C / C++
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Meson
[meson.build]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Markdown (donâ€™t strip trailing spaces)
[*.md]
trim_trailing_whitespace = false
